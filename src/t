#:lib/!.sh
#:lib/flag.sh
#:lib/_.sh
#:lib/color.sh
#:lib/ui.sh
#:lib/self.sh
#:lib/t.sh

if [[ "${BASH_SOURCE[0]}" = "$0" ]]; then
	#/help/
	#/command/
	.source() {
		echo "readonly _SELF=$(self.path)"
		echo
		sed 's/^\t\t//' <<'EOF'
			#:lib/!.sh
			#:lib/defer.sh
			#:lib/temp.sh: temp.dir temp.clean
			#:lib/t.sh
			#:src/t.sh
EOF
	}

	#:lib/main.sh
	.main() {
		if ! .interactive && [[ $# -eq 0 ]]; then
			.source
		else
			.dispatch "$@"
		fi
	}

	.main "$@"
fi
